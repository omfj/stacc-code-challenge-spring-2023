generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String?
    access_token      String?
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String?
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
    @@index([userId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
}

enum Role {
    ADMIN
    USER
}

model User {
    id            String        @id @default(cuid())
    name          String?
    email         String?       @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]
    consumption   Consumption[]
    role          Role          @default(USER)
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

enum Unit {
    KWH
}

model Consumption {
    from        DateTime
    to          DateTime
    consumption Float
    unit        Unit
    User        User     @relation(fields: [userId], references: [id])
    userId      String

    @@unique([from, to, userId])
    @@index([userId])
}

enum PriceModel {
    FIXED
    VARIABLE
    SPOT
}

model Provider {
    id    String @id @default(cuid())
    name  String @unique
    plans Plan[]
}

model Plan {
    id          String     @id @default(cuid())
    title       String
    description String
    PriceModel  PriceModel
    price       Float?
    fee         Float?
    period      Int?
    provider    Provider   @relation(fields: [providerId], references: [id])
    providerId  String

    @@index([providerId])
}
